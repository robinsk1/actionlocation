/ Navigation
%nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#{root_path}"}
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li
          -if current_page?(root_path)
            %a.smooth-scroll{:href => "#services"} Services
          -else
            %a{:href => "#{root_path}#services"} Services
        %li
          %a{:href => "#{locations_path}"} Locations
        %li
          -if current_page?(root_path)
            %a.smooth-scroll{:href => "#feature"} El Maresme
          -else
            %a{:href => "#{root_path}#feature"} El Maresme
        %li
          -if current_page?(root_path)
            %a.smooth-scroll{:href => "#contact"} Contact
          -else
            %a{:href => "#{root_path}#contact"} Contact
    / /.navbar-collapse
  / /.container
