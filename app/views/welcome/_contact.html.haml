.container
  .row#contact
    .col-lg-12
      %h2.page-header.contact-header Contact
    .container
      .col-md-8
        = simple_form_for @contact, url: send_mail_path, method: 'post', html: { class: 'form-horizontal' } do |form|
          = form.input :name, required: true
          = form.input :email, required: true
          = form.input :message, as: :text, required: true
          .hidden
            = form.input :nickname, hint: 'Leave this field blank!'
          = form.button :submit, 'Send message', class: "btn btn-primary left"
